<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>MVC and MongoDb</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="main.js" charset="utf-8"></script>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>Backend Foundations</h1>
        <p>Hands-On: MVC and MongoDb</p>
      </div>
    </div>
    <div class="container">
      <form class="form-group" action="/employees" method="post">
        <input class="form-control" type="text" name="firstName" placeholder="First Name"><br>
        <input class="form-control" type="text" name="lastName" placeholder="Last Name"><br>
        <input class="form-control" type="text" name="title" placeholder="Title"><br>
        <span><label for="startDate">Start Date</label></span>
        <input class="form-control" type="date" name="startDate" placeholder="Start Date"><br>
        <input class="form-control" type="number" name="wage" placeholder="Wage"><br>
        <span><label for="birthdate">Birth Date</label></span>
        <input class="form-control" type="date" name="birthdate" placeholder="Birthdate"><br>
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
    </div>

    <div class="container well">
      <ul>
        <% for (i=0; i < employees.length; i++) { %>
          <li><a href="/employees/<%= employees[i]._id %>">
            <span>First Name: <%= employees[i].firstName %></span><br>
            <span>Last Name: <%= employees[i].lastName %></span> <br>
            <span>Title: <%= employees[i].title %></span> <br>
            <span>Start Date: <%= employees[i].startDate %></span> <br>
            <span>Wage: <%= employees[i].wage %></span> <br>
            <span>Birth Date: <%= employees[i].birthdate %></span> <br>
            </a>
          </li> <hr>
        <% } %>
      </ul>
    </div>

  </body>
</html>
